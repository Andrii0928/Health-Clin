<Window x:Class="MyHealth.Client.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHealth.Client.Desktop"
        xmlns:controls="clr-namespace:MyHealth.Client.Desktop.Controls"
        mc:Ignorable="d"
        WindowStyle="ThreeDBorderWindow"
        Icon="/Assets/favicon_logo.png"
        Title="HealthClinic.biz" Height="720" Width="1280" MaxHeight="720" MaxWidth="1280" WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Frame x:Name="MainFrame" Loaded="MainFrameLoaded" NavigationUIVisibility="Hidden"/>
        <Grid VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="108"/>
                    <ColumnDefinition Width="357"/>
                    <ColumnDefinition Width="75"/>
                </Grid.ColumnDefinitions>
                <Border Background="Transparent" Grid.Column="1" MouseLeftButtonDown="GridMouseDown"/>
                <Border Background="Transparent" Grid.Column="3" MouseLeftButtonDown="GridMouseDown"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
