<UserControl x:Class="MyHealth.Client.Desktop.Controls.PatientInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyHealth.Client.Desktop.Controls"
              xmlns:controls="clr-namespace:MyHealth.Client.Desktop.Controls"
             mc:Ignorable="d" 
              d:DesignHeight="768" d:DesignWidth="450">
    <Grid Background="{StaticResource MainViewBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <controls:PatientDetails x:Name="PatientDetails" Grid.Row="0" />
        <controls:Doctors Grid.Row="1" />
    </Grid>
</UserControl>
